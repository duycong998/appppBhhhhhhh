<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_bg"
    android:orientation="vertical"
    tools:context=".Activity.InformationClientActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarClient"
        android:background="@drawable/custom_bg"
        app:titleTextColor="#FF5722"
        app:title="Điền Vào Để Mua Nè"
        app:logo="@drawable/aaa"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/custom_boder"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Xác Nhận Thông Tin Khách Hàng"
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="text"
                android:layout_margin="10dp"
                android:id="@+id/edtNameClient"
                android:hint="Nhập Tên Khách Hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="phone"
                android:layout_margin="10dp"
                android:id="@+id/edtPhoneClient"
                android:hint="Nhập Số Điện Thoại Khách Hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="10dp"
                android:id="@+id/edtEmailClient"
                android:hint="Nhập Email Khách Hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout

            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="50dp"
                android:textStyle="bold"
                android:background="#59D8DA"
                android:textColor="#F02"
                android:padding="10dp"
                android:text="Xác Nhận"
                android:id="@+id/btnConfirmClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textStyle="bold"
                android:background="#59D8DA"
                android:textColor="#F02"
                android:padding="10dp"
                android:text="Trở Về"
                android:id="@+id/btnBackClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>